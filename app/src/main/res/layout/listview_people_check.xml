<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="AndroidLintUseCompoundDrawables"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:id="@+id/ImageViewPicture"
        android:layout_marginTop="4pt"
        android:layout_marginBottom="4pt"
        android:layout_marginStart="4pt"
        android:layout_marginEnd="6pt"
        android:background="#000000"
        android:contentDescription="@string/profile_picture"/>

    <TextView
        tools:ignore="HardcodedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/textViewName"
        android:text="Sample Text"
        android:textColor="#000000"
        android:layout_alignWithParentIfMissing="false"
        android:layout_alignBottom="@+id/ImageViewPicture"
        android:layout_alignTop="@+id/ImageViewPicture"
        android:textAlignment="center"
        android:gravity="center_vertical"
        android:layout_toEndOf="@+id/ImageViewPicture"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:clickable="false"
        android:id="@+id/isParticipant"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@+id/ImageViewPicture"
        android:layout_alignTop="@+id/ImageViewPicture"
        android:layout_alignBottom="@+id/ImageViewPicture" />

</RelativeLayout>